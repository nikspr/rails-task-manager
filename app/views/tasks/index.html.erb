<div class="container py-5">
  <h1 class="mb-4">To-Do List</h1>
  <% @tasks.each do |task| %>
    <div class="form-check">
      <%= check_box_tag "task_completed", 1, task.completed, class: "form-check-input", data: { remote: true, url: task_path(task), method: :patch } %>
      <label class="form-check-label">
        <%= link_to task.title, task_path(task) %>
      </label>
    </div>
    <%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm mt-2" %>
  <% end %>
  <div class="mt-4">
    <%= link_to "Create New", tasks_new_path, class: "btn btn-primary" %>
  </div>
</div>
