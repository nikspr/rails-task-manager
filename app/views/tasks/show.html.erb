
<div class="container p-3">
  <h1>Detail view</h1>

  <p><%= @task.title %></p>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>

  <div class="form-check">
    <%= check_box_tag "task_completed", 1, @task.completed, class: "form-check-input", data: { remote: true, url: task_path(@task), method: :patch } %>
    <label class="form-check-label">
      Mark as Completed
    </label>
  </div>

  <p><%= link_to "Edit", tasks_edit_path %></p>
  <p><%= link_to "See All", tasks_path %></p>
  <p>
    <%= button_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </p>
</div>
